<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingLeft="@dimen/margin_medium"
    android:paddingTop="@dimen/margin_medium">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/category_item_view_dummy_image"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_talk_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_talk_topic"
        android:textColor="@color/white"
        android:textSize="@dimen/text_regular_3x"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_above="@id/tv_talk_number"
        />

    <TextView
        android:id="@+id/tv_talk_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7 talks"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_alignLeft="@+id/tv_talk_topic"
        android:layout_marginBottom="@dimen/margin_medium"
        />

    <View
        android:id="@+id/view_between_two_tv"
        android:layout_width="1dp"
        android:layout_height="17dp"
        android:background="#FFF"
        android:layout_toRightOf="@+id/tv_talk_number"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_alignTop="@+id/tv_talk_number"
        />

    <TextView
        android:id="@+id/tv_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="1:12:17"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/view_between_two_tv"
        android:layout_alignTop="@id/tv_talk_number"
        />

    <ImageView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_length"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_more_vert_24dp"
        android:layout_alignBottom="@id/tv_talk_number"/>



</RelativeLayout>